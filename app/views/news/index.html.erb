

<script>
function DeleteRow() {
    if(confirm('Bạn có muốn xóa không ?'))
    {
      return true;
    }
    else
    {
      return false;
    }
}
</script>


<div class="box">
    <header>
        <div class="icons"><a href="/admin/news/new" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Thêm Mới</a></div>
        <h5>Tin Tức</h5>
    </header>

    <div class="body">
        <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            
            <div class="row">
                <div class="col-sm-12">
                    <table id="dataTable" class="table table-bordered table-hover table-striped dataTable">
                        <thead>
                            <tr>
                                <th width="3%">Mã</th>
                                <th width="15%">Hình ảnh</th>
                                <th width="15%">Liên kết</th>
                                <th width="15%">Tiêu Đề</th>
                                <th width="15%">Danh Mục</th>
                                <th width="15%">Người viết</th>
                                <th width="9%">Sắp Xếp</th>
                                <th width="5%">Chọn</th>
                            </tr>
                        </thead>
                        <tbody id="table">
                            <% @list.each do |row| %>
                            <tr>
                                <td align ="center"><%= row['id_news'] %></td>
                                <td align="center"><img src="<%=row['image'] %>" height="70px"></td>
                                <td><%= row['link'] %></td>
                                <td><%= row['title'] %></td>
                                <td><%= row['categories'] %></td>
                                <td><%= row['customer'] %></td>
                                <td  align="center"><%= row['sort_order'] %></td>
                                <td align ="center">
                                    <a href="/admin/news/edit/<%= row['id_news'] %>" class="text-success" ><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a href="/admin/news/delete/<%= row['id_news'] %>" class="text-danger" onclick="return DeleteRow();" ><i class="glyphicon glyphicon-trash"></i></a>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>                
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


